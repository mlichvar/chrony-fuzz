From: Miroslav Lichvar <mlichvar@redhat.com>
Date: Tue, 12 Apr 2022 16:10:01 +0200
Subject: [PATCH 05/19] disable writing and removing of files

---
 util.c | 7 +++++++
 1 file changed, 7 insertions(+)

diff --git a/util.c b/util.c
index c4c89345..462db851 100644
--- a/util.c
+++ b/util.c
@@ -1279,11 +1279,15 @@ UTI_OpenFile(const char *basedir, const char *name, const char *suffix,
       break;
     case 'w':
     case 'W':
+      if (!getenv("TEST_ENABLE_WRITE"))
+        return NULL;
       flags = O_WRONLY | O_CREAT | O_EXCL;
       file_mode = "w";
       break;
     case 'a':
     case 'A':
+      if (!getenv("TEST_ENABLE_WRITE"))
+        return NULL;
       flags = O_WRONLY | O_CREAT | O_APPEND | O_NOFOLLOW;
       file_mode = "a";
       break;
@@ -1368,6 +1372,9 @@ UTI_RemoveFile(const char *basedir, const char *name, const char *suffix)
     return 0;
   }
 
+  DEBUG_LOG("Refused to remove %s", path);
+  return 0;
+
   if (unlink(path) < 0) {
     LOG(LOGS_ERR, "Could not remove %s : %s", path, strerror(errno));
     return 0;
